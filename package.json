{
  "name": "@js-starter/node",
  "version": "0.1.0",
  "description": "A node.js application starter.",
  "keywords": [
    "Node.js",
    "eslint",
    "prettier",
    "esm",
    "starter"
  ],
  "license": "MIT",
  "author": "唯然 <weiran.zsd@outlook.com>",
  "type": "module",
  "exports": "./lib/index.js",
  "files": [
    "LICENSE",
    "README.md",
    "lib"
  ],
  "scripts": {
    "lint": "eslint lib tests",
    "prepare": "husky install",
    "test": "uvu tests",
    "test:watch": "watchlist lib tests -- npm t",
    "test:cov": "c8 --include=lib --reporter=lcov npm t",
    "test:report": "codecov"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "eslintConfig": {
    "env": {
      "mocha": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:n/recommended"
    ]
  },
  "devDependencies": {
    "c8": "^7.10.0",
    "codecov": "^3.8.3",
    "eslint": "^8.5.0",
    "eslint-plugin-n": "^14.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1",
    "uvu": "^0.5.2",
    "watchlist": "^0.3.1"
  },
  "engines": {
    "node": ">=v16.13.1"
  }
}
